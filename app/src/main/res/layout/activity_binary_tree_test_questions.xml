<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebkcg"
    tools:context=".BinaryTreeTestQuestions">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="729dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">



                <TextView

                    style="@style/MaterialAlertDialog.Material3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/aldrich"
                    android:text="\nBinary Tree Questions\n"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="italic"
                    android:theme="@style/Theme.AppCompat.DayNight" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/binarytree"
                    android:paddingBottom="40dp"
                    ></ImageView>

                <TextView
                    android:id="@+id/levelOrderTraversal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/Level_Order_Traversal"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>



                <TextView
                    android:id="@+id/reverselevelOrderTraversal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/SerDeserialize"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>


                <TextView
                    android:id="@+id/LeftView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/TopView"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/topView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/LeftView"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/rightView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/BottomView"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/bottomView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/RightView"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/heightQues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/Sum_of_longest_bloodline"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/diameterQues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/ZigZag"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/BalancedQues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/Lowest_common_ancestor"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/LowestCommonAncestor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/Height"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/SumOfLongestBloodLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/Diameter"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/ZigZagTraversal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_double_arrow_24"
                    android:fontFamily="@font/aldrich"
                    android:linksClickable="true"
                    android:paddingLeft="5dp"
                    android:text="@string/Vertical"
                    android:textAllCaps="true"

                    android:textColorLink="@color/white"
                    android:textSize="16dp"></TextView>
            </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>